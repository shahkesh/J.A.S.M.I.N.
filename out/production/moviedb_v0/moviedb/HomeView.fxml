<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@myCSS.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="moviedb.HomeViewController">
   <center>
      <VBox>
         <children>
            <StackPane VBox.vgrow="ALWAYS">
               <children>
                  <Label alignment="CENTER" text="Search for movie, TV show, actor or actress!">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </StackPane>
            <TextField fx:id="movieSearchField" alignment="CENTER" promptText="Enter search request" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets left="100.0" right="100.0" top="50.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </TextField>
            <StackPane>
               <children>
                  <Button fx:id="searchButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#searchButtonClicked" text="Search" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="75.0" />
               </VBox.margin>
            </StackPane>
         </children>
         <BorderPane.margin>
            <Insets bottom="100.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <left>
      <VBox prefWidth="200.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <StackPane>
               <children>
                  <Label alignment="CENTER" text="My Favorites">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
            <ListView fx:id="favoriteListView">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding></ListView>
         </children></VBox>
   </left>
   <right>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Random trivia of the day" wrapText="true">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" />
               </padding>
            </Label>
            <TextArea fx:id="factsTextArea" editable="false" prefWidth="200.0" stylesheets="@myCSS.css" wrapText="true" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </TextArea>
         </children></VBox>
   </right>
   <top>
      <StackPane alignment="BOTTOM_CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="homeTitle" alignment="CENTER" text="J.A.S.M.I.N.">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets bottom="50.0" top="50.0" />
         </BorderPane.margin>
      </StackPane>
   </top>
   <bottom>
      <VBox>
         <children>
            <Label alignment="CENTER" prefHeight="27.0" prefWidth="211.0" text="Trending Movies" underline="true">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <HBox prefHeight="200.0" spacing="35.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox>
                     <children>
                        <Label fx:id="popular0Label" alignment="TOP_CENTER" text="Label">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                           <font>
                              <Font size="22.0" />
                           </font>
                        </Label>
                        <ImageView fx:id="popular0ImageView" fitHeight="225.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
                  <VBox layoutX="10.0" layoutY="10.0">
                     <children>
                        <Label fx:id="popular1Label" alignment="TOP_CENTER" text="Label">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                           <font>
                              <Font size="22.0" />
                           </font>
                        </Label>
                        <ImageView fx:id="popular1ImageView" fitHeight="225.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
                  <VBox layoutX="185.0" layoutY="10.0">
                     <children>
                        <Label fx:id="popular2Label" alignment="TOP_CENTER" text="Label">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                           <font>
                              <Font size="22.0" />
                           </font>
                        </Label>
                        <ImageView fx:id="popular2ImageView" fitHeight="225.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
                  <VBox layoutX="360.0" layoutY="10.0">
                     <children>
                        <Label fx:id="popular3Label" alignment="TOP_CENTER" text="Label">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                           <font>
                              <Font size="22.0" />
                           </font>
                        </Label>
                        <ImageView fx:id="popular3ImageView" fitHeight="225.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
               </children>
               <BorderPane.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </BorderPane.margin>
               <VBox.margin>
                  <Insets bottom="15.0" left="50.0" right="50.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
